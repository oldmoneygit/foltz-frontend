{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign image_ratio = section.settings.image_ratio
-%}

{%- if image_ratio == 'adapt' and section.settings.image != blank -%}
  {% assign padding_bottom = 1 | divided_by: section.settings.image.aspect_ratio | times: 100 | round: 2 %}
  {% style %}
    @media screen and (max-width: 749px) {
      .image-banner .banner > .banner__media {
        aspect-ratio: {{ section.settings.image.aspect_ratio }};
      }
    }

    @media screen and (min-width: 990px) {
      #Banner-{{ section.id }}.image--overlay::before, #Banner-{{ section.id }} .banner__media::before {
        content: '';
        display: block;
        padding-bottom: {{ padding_bottom }}%;
      }
    }
  {% endstyle %}
{%- elsif image_ratio == 'adapt' and section.settings.image == blank -%}
  <style>
    	@media screen and (min-width: 990px) {
         #Banner-{{ section.id }}.image--overlay::before, #Banner-{{ section.id }} .banner__media::before {
       	content: '';
       	display: block;
       	padding-bottom: 25%;
       }
    }
  </style>
{% else %}
  {% liquid
    assign aspect_ratio = section.settings.image_ratio | split: '/'
    assign temp = aspect_ratio[0] | append: '.0'
    assign padding_bottom = aspect_ratio[1] | divided_by: temp | times: 100 | round: 2
  %}
  {% style %}
    @media screen and (max-width: 749px) {
      .image-banner .banner > .banner__media {
        aspect-ratio: {{ image_ratio }};
      }
    }

    @media screen and (min-width: 990px) {
       #Banner-{{ section.id }}.image--overlay::before,
         #Banner-{{ section.id }} .banner__media::before {
         	content: '';
         	display: block;
         	padding-bottom: {{ padding_bottom }}%;
         }
    }
  {% endstyle %}
{%- endif -%}

{% style %}
   {% for scheme in settings.color_schemes -%}
   	{% assign scheme_classes = scheme_classes | append: ', .color-' | append: scheme.id %}
   	 [data-scheme='dark']	.banner.color-{{ scheme.id }},
   	.image-banner__icon.color-{{ scheme.id }} {
   		--color-background: {{ scheme.settings.colors_background_1.red }},{{ scheme.settings.colors_background_1.green }},{{ scheme.settings.colors_background_1.blue }};
   	--color-foreground: {{ scheme.settings.colors_text.red }}, {{ scheme.settings.colors_text.green }}, {{ scheme.settings.colors_text.blue }};
  --color-foreground-secondary: {{ scheme.settings.colors_secondary_text.red }}, {{ scheme.settings.colors_secondary_text.green }}, {{ scheme.settings.colors_secondary_text.blue }};
   	--color-accent: {{ scheme.settings.colors_text.red }}, {{ scheme.settings.colors_text.green }}, {{ scheme.settings.colors_text.blue }};
    --color-foreground-title: {{ scheme.settings.colors_text_title.red }}, {{ scheme.settings.colors_text_title.green }}, {{ scheme.settings.colors_text_title.blue }};
  {% if scheme.settings.background_gradient != empty %}
  	--gradient-background: {{ scheme.settings.background_gradient }};
  {% else %}
  	--gradient-background: {{ scheme.settings.colors_background_1 }};
  {% endif %}
   	 }
    @media (prefers-color-scheme: dark) {
   	 [data-scheme='auto'] {
   	.banner.color-{{ scheme.id }},
   	.image-banner__icon.color-{{ scheme.id }} {
   		--color-background: {{ scheme.settings.colors_background_1.red }},{{ scheme.settings.colors_background_1.green }},{{ scheme.settings.colors_background_1.blue }};
  	--color-foreground: {{ scheme.settings.colors_text.red }}, {{ scheme.settings.colors_text.green }}, {{ scheme.settings.colors_text.blue }};
  --color-foreground-secondary: {{ scheme.settings.colors_secondary_text.red }}, {{ scheme.settings.colors_secondary_text.green }}, {{ scheme.settings.colors_secondary_text.blue }};
  	--color-accent: {{ scheme.settings.colors_text.red }}, {{ scheme.settings.colors_text.green }}, {{ scheme.settings.colors_text.blue }};
  	--color-foreground-title: {{ scheme.settings.colors_text_title.red }}, {{ scheme.settings.colors_text_title.green }}, {{ scheme.settings.colors_text_title.blue }};
   {% if scheme.settings.background_gradient != empty %}
  		--gradient-background: {{ scheme.settings.background_gradient }};
  	{% else %}
  		--gradient-background: {{ scheme.settings.colors_background_1 }};
  	{% endif %}
   	 }
   	 }
    }
   {% endfor %}
{% endstyle %}

{% style %}
   {% render 'section-margin' %}
   @media screen and (min-width: 750px) {
  	#Banner-{{ section.id }} .banner__overlay {
  		background-color: rgba(var(--color-overlay), {{ section.settings.opacity_overlay }});
  	}
  }
{% endstyle %}

<div class="image-banner {% if section.settings.full_width %}{% else %}container{% endif %}">
  <div
    id="Banner-{{ section.id }}"
    class="banner banner--{{ section.settings.image_ratio }} image--overlay banner--{{ section.settings.text_align }} {% if section.settings.full_width %}banner--container{% else %}{% endif %} color-{{ section.settings.color_scheme }} background"
  >
    {%- if section.settings.image != blank -%}
      {% liquid
        assign width_ratio = 1
        if image_ratio != 'adapt'
          assign aspect_ratio_img = section.settings.image.aspect_ratio | round: 2
          assign aspect_ratio_settings = aspect_ratio[0] | plus: 0.0 | divided_by: aspect_ratio[1] | round: 2

          if aspect_ratio_img > aspect_ratio_settings
            assign width_ratio = aspect_ratio_img | divided_by: aspect_ratio_settings | round: 2
          endif
        endif

        if section.settings.image.width > section.settings.image.height
          assign width_adapt_ratio = 250 | times: section.settings.image.aspect_ratio | round: 2
        endif
      %}

      {% capture sizes %}
        (min-width: 750px) calc((100vw - 40px) * {{ width_ratio }}),
        {% if section.settings.image.width > section.settings.image.height %}
          {{ width_adapt_ratio }}px
        {% else %}
          calc((100vw - 40px) * {{ width_ratio }})
        {% endif %}
			{% endcapture %}

      <div class="banner__media media">
        {{
          section.settings.image
          | image_url: width: section.settings.image.width
          | image_tag:
            loading: 'lazy',
            widths: '360, 533, 720, 940, 1066, 1200, 1400, 1600, 1800, 2000, 2200, 2400, 2600, 2800, 3000, 3264, 3400, 3584, 3800, 4000, 4200, 4400, 4600, 4800, 5000, 5200, 5400, 5600',
            sizes: sizes
        }}
        <span class="banner__overlay"></span>
      </div>
    {%- endif -%}
    <div class="image-banner__wrapper image-banner__wrapper--{{ section.settings.text_width }} {% if section.settings.full_width %}container{% else %}{% endif %}">
      {%- if section.settings.icon != 'none' -%}
        <div
          class="
            image-banner__icon image-banner__icon--{{- section.settings.icon_size }} {% if section.settings.box_shadow %}image-banner__icon--shadow
            {% endif %} image-banner__icon--{{- section.settings.icon_style }} image-banner__icon--{{- section.settings.icon_fill_type }} color-{{ section.settings.icon_color_scheme }}
          "
        >
          <i
            class="icon icon-pack icon-{{ section.settings.icon }} {% if section.settings.icon_style == 'colored' and section.settings.icon_fill_type == 'gradient' %} text-gradient {% endif %}"
          ></i>
        </div>
      {%- endif -%}
      {%- if section.settings.subheading != blank -%}
        <div class="image-banner__subheading {{ section.settings.subheading_style }}">
          {{ section.settings.subheading }}
        </div>
      {%- endif -%}
      {%- if section.settings.heading != blank -%}
        <h2 class="image-banner__heading {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      {%- if section.settings.text_information != blank or section.settings.show_view_all -%}
        <div class="image-banner__information">
          {%- if section.settings.text_information != blank -%}
            <div class="image-banner__text body-large">
              {{ section.settings.text_information }}
            </div>
          {%- endif -%}

          {%- if section.settings.show_view_all -%}
            {% render 'button',
              link: section.settings.button_link,
              label: section.settings.button_label,
              style: section.settings.button_style,
              class: 'image-banner'
            %}
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

