                  <i
                    class="icon icon-pack icon-{{ block.settings.icon_1 }} {% if block.settings.icon_style == 'colored' and block.settings.icon_fill_type == 'gradient' %} text-gradient {% endif %}"
                  ></i>
                </div>
              {%- endif -%}
              <div class="mega-menu__tab-inner">
                {%- if block.settings.heading_1 != blank -%}
                  <div class="mega-menu__tab-heading">
                    {{ block.settings.heading_1 }}
                  </div>
                {%- endif -%}
                {%- if block.settings.description_1 -%}
                  <p class="mega-menu__tab-text body-small">
                    {{ block.settings.description_1 }}
                  </p>
                {%- endif -%}
                {%- if block.settings.menu_1 != blank -%}
                  <ul class="mega-menu__tab-list list-unstyled" role="list">
                    {%- for link in block.settings.menu_1.links -%}
                      <li class="mega-menu__tab-list-item body-small">
                        <a
                          href="{{ link.url }}"
                          class="mega-menu__tab-list-link focus-inset"
                          aria-disabled="true"
                          aria-label="{{ link.title | escape }}"
                        >
                          {{- link.title | escape -}}
                        </a>
                      </li>
