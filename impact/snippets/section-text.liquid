{%- if section.settings.subheading != blank or section.settings.heading != blank -%}
  <div class="{% if class %}{{ class }}__titles{% endif %} titles 
    {% if section.settings.heading == blank and section.settings.text == blank %} titles_margin-medium {% endif %}
    {% if text_align %} titles--{{ text_align }} {% endif %}">
    {%- if section.settings.subheading != blank -%}
      <div class="{% if class %}{{ class }}__subtitle{% endif %} {{ section.settings.subheading_style }}">
        {% if section.settings.subheading_icon != "none" %}
          <i class="icon icon-pack icon-{{ section.settings.subheading_icon }}"></i>
        {% endif %}
        {{ section.settings.subheading }}
      </div>
    {% endif %}
    {%- if section.settings.heading != blank -%}
      <h2
        class="{{ section.settings.heading_size }} {% if class %}{{ class }}__title{% endif %} title title--{{ section.settings.heading_line }} 
        {% if section.settings.word_break and section.settings.heading_line != 'none' %} title--word_break {% endif %}
        {% if section.settings.word_break_an and section.settings.heading_animation != 'none' %} title--word_break_an {% endif %}
        js-anim-{{ section.settings.heading_animation }}"
        style="--color-line: {{ section.settings.line_color }}"
        data-content="{{ section.settings.heading | escape }}"
      >
        {% if section.settings.heading_animation == 'none' or section.settings.heading_animation != 'true' -%}
          {{- section.settings.heading -}}
        {%- endif %}
      </h2>
    {% endif %}
  </div>
{% endif %}
{%- if section.settings.text != blank -%}
  <div class="{% if class %}{{ class }}__description{% endif %} description body-large {% if text_align %} description--{{ text_align }} {% endif %}">
    {{ section.settings.text }}
  </div>
{% endif %}
