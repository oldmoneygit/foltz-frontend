.section-{{ section.id }}-padding {
{% if section.settings.padding_top == 'no-indent' or section.settings.padding_top == blank %}
  padding-top: 0;
{% elsif section.settings.padding_top == 'xl' %}
  padding-top: 10rem;
{% elsif section.settings.padding_top == 'l' %}
  padding-top: 6.4rem;
{% elsif section.settings.padding_top == 'm' %}
  padding-top: 4.8rem;
{% elsif section.settings.padding_top == 's' %}
  padding-top: 3.2rem;
{% else %}
  padding-top: 2.4rem;
{% endif %}

{% if section.settings.padding_bottom == 'no-indent' or section.settings.padding_bottom == blank %}
  padding-bottom: 0;
{% elsif section.settings.padding_bottom == 'xl' %}
  padding-bottom: 10rem;
{% elsif section.settings.padding_bottom == 'l' %}
  padding-bottom: 6.4rem;
{% elsif section.settings.padding_bottom == 'm' %}
  padding-bottom: 4.8rem;
{% elsif section.settings.padding_bottom == 's' %}
  padding-bottom: 3.2rem;
{% else %}
  padding-bottom: 2.4rem;
{% endif %}
}

