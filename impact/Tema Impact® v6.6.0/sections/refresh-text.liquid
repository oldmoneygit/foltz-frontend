{%- if section.blocks.size > 0 -%}
  {%- render 'section-spacing-collapsing' -%}
  <style>
    #shopify-section-{{ section.id }} {
      --refresh-text-font-size: calc(min(20vw, 65px) * {{ section.settings.refresh_text_size_ratio }});
      --refresh-text-auto-columns: {% if section.blocks.size == 1 %}minmax(0, 1fr){% else %}{% if section.settings.text_divider != 'none' %}48vw auto{% else %}64vw{% endif %}{% endif %};
    }
    @media screen and (min-width: 700px) {
      #shopify-section-{{ section.id }} {
        --refresh-text-font-size: calc(min(15vw, var(--container-max-width) * 0.15) / {{ section.blocks.size }} * {{ section.settings.refresh_text_size_ratio }});
        --refresh-text-auto-columns: {% if section.settings.text_divider != 'none' %}minmax(0, 1fr) auto{% else %}minmax(0, 1fr){% endif %};
      }
    }
  </style>
  <div {% render 'section-properties' %}>
    <div
      {% unless section.settings.stack_mobile %}
        class="scroll-area bleed {% if section.blocks.size < 3 %}sm:unbleed{% else %}md:unbleed{% endif %}"
      {% endunless %}
    >
      <div class="refresh-text refresh-text--{{ section.settings.text_alignment }} {% unless section.settings.stack_mobile %}refresh-text--scroll{% endunless %}">
        {%- for block in section.blocks -%}
          <div class="snap-center" {{ block.shopify_attributes }}>
            {%- if block.settings.title != blank -%}
              <h2 class="refresh-text__text heading break-all">
                <refresh-text
                  {% if block.settings.animate_refresh_text %}
                    count-up="{{ block.settings.animate_refresh_text_duration }}"
                  {% endif %}
                  reveal-js
                >
                  {%- render 'styled-text',
                    content: block.settings.title,
                    text_color: section.settings.heading_text_color,
                    gradient: section.settings.heading_gradient,
                    style: section.settings.refresh_text_style
                  -%}
                </refresh-text>
              </h2>
            {%- endif -%}
            {%- if block.settings.subheading != blank
              or block.settings.content != blank
              or block.settings.button_text != blank
            -%}
              <div class="refresh-text__content">
                <div class="prose">
                  {%- if block.settings.subheading != blank -%}
                    <h3 class="h4">{{ block.settings.subheading | escape }}</h3>
                  {%- endif -%}
                  {{- block.settings.content -}}
                  {%- if block.settings.button_text != blank -%}
                    {%- render 'button',
                      content: block.settings.button_text,
                      href: block.settings.button_url,
                      size: 'xl',
                      background: section.settings.button_background,
                      text_color: section.settings.button_text_color
                    -%}
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
          </div>
          {%- unless forloop.last or section.settings.text_divider == 'none' -%}
            {%- case section.settings.text_divider -%}
              {%- when 'square' -%}
                <span class="shape-square shape--lg place-self-center"></span>
              {%- when 'circle' -%}
                <span class="shape-circle shape--lg place-self-center"></span>
              {%- when 'diamond' -%}
                <span class="shape-diamond shape--lg place-self-center"></span>
              {%- when 'line' -%}
                <span class="shape-line {% if section.settings.stack_mobile %}hidden sm:block{% endif %}"></span>
            {%- endcase -%}
          {%- endunless -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
{%- endif -%}
{% schema %}
{
  "name": "Texto de impacto",
  "class": "shopify-section--refresh-text",
  "tag": "section",
  "disabled_on": {
    "templates": ["password"],
    "groups": ["header", "custom.overlay"]
  },
  "max_blocks": 3,
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Texto de impacto",
          "info": "Para melhores resultados, mantenha este texto curto e refreshante.",
          "default": "100%"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subtítulo",
          "default": "Destaque um benefício do seu produto"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Conteúdo"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Texto do botão"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Link do botão"
        },
        {
          "type": "header",
          "content": "Animação de número"
        },
        {
          "type": "paragraph",
          "content": "Somente números podem ser animados. Pontos, vírgulas e espaços podem ser usados como separadores."
        },
        {
          "type": "checkbox",
          "id": "animate_refresh_text",
          "label": "Mostrar animação de contagem crescente",
          "default": false
        },
        {
          "type": "range",
          "id": "animate_refresh_text_duration",
          "label": "Duração da contagem crescente",
          "min": 0.5,
          "max": 5,
          "step": 0.1,
          "unit": "s",
          "default": 2
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Largura total",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "stack_mobile",
      "label": "Empilhar no celular",
      "default": true
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Alinhamento do texto",
      "options": [
        {
          "value": "start",
          "label": "Esquerda"
        },
        {
          "value": "center",
          "label": "Centro"
        },
        {
          "value": "end",
          "label": "Direita"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "refresh_text_style",
      "label": "Estilo do texto de refresho",
      "options": [
        {
          "value": "outline",
          "label": "Contorno"
        },
        {
          "value": "fill",
          "label": "Preenchido"
        }
      ],
      "default": "fill"
    },
    {
      "type": "select",
      "id": "text_divider",
      "label": "Divisor de textos múltiplos",
      "options": [
        {
          "value": "none",
          "label": "Nenhum"
        },
        {
          "value": "square",
          "label": "Quadrado"
        },
        {
          "value": "circle",
          "label": "Círculo"
        },
        {
          "value": "diamond",
          "label": "Diamante"
        },
        {
          "value": "line",
          "label": "Linha"
        }
      ],
      "default": "none"
    },
    {
      "type": "range",
      "id": "refresh_text_size_ratio",
      "label": "Proporção do tamanho do texto de refresho",
      "min": 0.5,
      "max": 1.5,
      "step": 0.1,
      "default": 1
    },
    {
      "type": "header",
      "content": "Cores",
      "info": "O gradiente substitui cores sólidas quando configurado. O contorno do texto gradiente e o fundo gradiente não podem ser combinados."
    },
    {
      "type": "color",
      "id": "background",
      "label": "Fundo"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Gradiente de fundo"
    },
    {
      "type": "color",
      "id": "heading_text_color",
      "label": "Texto de impacto"
    },
    {
      "type": "color_background",
      "id": "heading_gradient",
      "label": "Gradiente do texto de refresho"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Texto"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Fundo do botão"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Texto do botão"
    }
  ],
  "presets": [
    {
      "name": "Texto de impacto",
      "blocks": [
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}
